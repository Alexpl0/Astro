---
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
import '../css/styles.css';
import '../css/header.css';
---

<Layout>
  <html lang="en">
    <head>
      <meta charset="UTF-8" />
      <meta http-equiv="X-UA-Compatible" content="IE=edge" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <title>Document</title>
      <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
        crossorigin="anonymous"
      />
    </head>
    <body>
      <header class="header">
        <a href="#" class="header__logo">Instituto Mexicano del Transporte</a>
        <ion-icon name="menu-outline" class="header__toggle" id="nav-toggle"></ion-icon>
        <nav class="nav" id="nav-menu">
          <div class="nav__content bd-grid">
            <ion-icon name="close-outline" class="nav__close" id="nav-close"></ion-icon>
            <div class="nav__perfil">
              <div class="nav__img">
                <img src="/media/logo.jpg" alt="logoIMT" />
              </div>
              <div>
                <a href="#" class="nav__name">Instituto Mexicano del Transporte</a>
              </div>
            </div>
            <div class="nav__menu">
              <ul class="nav__list">
                <li class="nav__item">
                  <a href="/" class="nav__link">Home</a>
                </li>
                <li class="nav__item">
                  <a href="/scanQr" class="nav__link active">Inventario</a>
                </li>
                <li class="nav__item">
                  <a href="/salas" class="nav__link">Salas</a>
                </li>
                <li class="nav__item">
                  <a href="/newQR" class="nav__link">Alta Producto</a>
                </li>
                <li class="nav__item">
                  <a href="/ExcelToJson" class="nav__link">Subir Excel</a>
                </li>
                <li class="nav__item">
                  <a href="/DataTables" class="nav__link">Reportes</a>
                </li>
              </ul>
            </div>
          </div>
        </nav>
      </header>

      <main>
        <!-- Escanear QR -->
        <div id="qr" style="display: block;">
          <div>
            <h5 class="text-center">Escanear c칩digo QR del Equipo</h5>
            <div class="row text-center">
              <a id="btn-scan-qr" href="#">
                <img
                  src="https://dab1nmslvvntp.cloudfront.net/wp-content/uploads/2017/07/1499401426qr_icon.svg"
                  class="img-fluid text-center"
                  width="175"
                  alt="QR Code Icon"
                />
              </a>
              <canvas hidden id="qr-canvas" class="img-fluid"></canvas>
            </div>
            <div class="row mx-5 my-3">
              <button id="camOn" onclick="encenderCamara()">Encender c치mara</button>
              <button id="camOff" onclick="cerrarCamara()">Detener c치mara</button>
            </div>
          </div>
        </div>

        <!-- Formulario de C칩digo QR -->
        <div id="newInventario"></div>

        <!-- Otros elementos del cuerpo -->
        <button id="buttonHome" onclick="buttonHome()">Regresar</button>
      </main>
    </body>
  </html>
</Layout>

<!-- Scripts externos y de cliente -->
<script is:inline src="https://cdn.jsdelivr.net/npm/qrcode-reader/qrcode-reader.min.js"></script>
<script src="../assets/plugins/qrCode.min.js"></script>
<script is:inline src="https://cdn.jsdelivr.net/npm/jsqr@1.4.0/dist/jsQR.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/qrcode-reader@1.0.4/dist/index.min.js"></script>
<script is:inline src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script is:inline src="https://unpkg.com/ionicons@5.1.2/dist/ionicons.js"></script>
<script is:inline src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<!-- Scripts locales -->
<script src="../js/index.js"></script>
<script src="../js/header.js"></script>
<script src="../js/form.js"></script>


